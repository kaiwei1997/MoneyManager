<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@drawable/splash_gradient">

    <ImageView
        android:id="@+id/iv_Splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="106dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_availableBudget"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="20dp"
        android:text="@string/available_budget"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tv_totalSpent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_Splash" />

    <TextView
        android:id="@+id/tv_totalSpent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="152dp"
        android:text="@string/total_spend"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_availableBudget" />

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="166dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="165dp"
        android:text="@string/balance"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_totalSpent" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="148dp"
        android:text="@string/start"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_balance" />


</android.support.constraint.ConstraintLayout>